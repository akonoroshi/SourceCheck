snapshot {
    @defBlock BODY {
        script {
            doAsk(literal)
            doIfElse(reportListContainsItem(var, getLastAnswer), script {
                doSayFor(reportJoinWords(list(literal, getLastAnswer, literal)), literal)
            }, script {
                doSayFor(reportJoinWords(list(literal, getLastAnswer, literal)), literal)
                doAddToList(getLastAnswer, var)
            })
        }
    }
    @defVar BLOCK {
        stage {
            sprite {
                @if (BLOCK) {
                    script {
                        evaluateCustomBlock
                    }
                } @unless (BLOCK) {
                    @block BODY
                }
            }
        }
        @if (BLOCK) {
            customBlock {
                @block BODY
            }
        }
    }
    var
}