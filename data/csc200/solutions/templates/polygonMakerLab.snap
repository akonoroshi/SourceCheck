snapshot {
    stage {
        sprite {
            @anything
        }
    }
    customBlock {
        script {
            @anyOrder {
                down
                setSize(var:thickness)
            }
            doRepeat(var:sides, script {
                @anyOrder {
                    forward(var:length)
                    @or {
                        turn(reportQuotient(literal, var:sides))
                        turnLeft(reportQuotient(literal, var:sides))
                    }
                }
            })
            up
        }
        varDec:length
        varDec:sides
        varDec:thickness
    }
}